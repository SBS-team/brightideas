  .row
    .pull-right
      %input#input-rating.rating{"data-max" => "5", "data-min" => "0","data-show-clear"=>"false", "data-step" => "0.1",
                                  :value => !@idea.ratings.average(:rate).nil? ? @idea.ratings.average(:rate).round(2): 0 }
  -if(!@idea.comments.empty?)
    .row
      .detailBox
        .actionBox
          %ul.commentList
            =comments_tree_for(@idea.comments.hash_tree)
  .row
    %ul#reply_comment
    .post-comment
