.container
  .row
    .panel.panel-info
      .panel-heading
        .row
          .col-md-2
            -if !@idea.avatar_id.nil?
              =image_tag Attachment.find(@idea.avatar_id).path.thumb_200x200.url, :class => "p-bot-5", :size => '150x150'
            -else
              =image_tag '/img/no_image_available_thumb.jpg', :class => "p-bot-5", :width => 100, :height => 100
          .col-md-10
            %h2.idea-title.text-left
              =@idea.title
        .row
          .pull-right{ :style => 'padding-right:15px;' }
            =link_to @idea.user do
              = image_tag(@idea.user.avatar.small_avatar.url, :class => 'img-circle')
              =@idea.user.first_name + " " + @idea.user.last_name
            at
            =@idea.created_at.localtime.strftime('%d-%m-%Y, %H:%M')
      .panel-body
        =@idea.description.html_safe
      -if !@idea.attachments.empty?
        .panel-footer
          %h4 Attachments:
          .row
            =render partial: @idea.attachments
