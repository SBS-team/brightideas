- @user_ideas.each do |idea|
  .idea-block
    .col-md-2
      .idea-logo-box
        - if !idea.avatar_id.nil?
          = image_tag Attachment.find(idea.avatar_id).path.thumb.url, :class => 'idea-logo'
        - else
          = image_tag '/img/no_image_available_thumb.jpg'
    .col-md-10
      = link_to idea_path(idea) do
        %h3=idea.title
      .idea-desc-block
        = idea.description.html_safe
      .idea-statistic
        %span.glyphicon.glyphicon-comment
          15
        %span.glyphicon.glyphicon-star
          5
  %hr