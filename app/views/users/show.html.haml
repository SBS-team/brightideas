.container
  .row
    -if @user == current_user
      =link_to edit_user_registration_path, class: 'button_small button_outline button_outline_grey pull-right' do
        %i.glyphicon.glyphicon-pencil
        Edit Profile
    .col-md-2
      .avatar-box-big
        = image_tag(@user.avatar.big_avatar.url)
        -if @user == current_user
          %span.glyphicon.glyphicon-pencil.pull-right.change-avatar{:title => 'Change avatar'}
    .col-md-10
      .user-name
        %span
          = "#{@user.first_name}"+" #{@user.last_name}"
      .user-post
        %span.glyphicon.glyphicon-user
          = @user_post
        %br
        %span.glyphicon.glyphicon-home
          office
          = @user.office.number
      .last-activity
        %span.glyphicon.glyphicon-time
        Last activity
        = time_ago_in_words @user.last_activity
        ago
      #md-tags.tag-list
        %input{:type=>'hidden', :id => 'tagListIds'}

  .row
    %span.ideas-span
      My ideas
    %hr
    .col-md-12
      .ideas-container
        = render 'users/user_idea', :locals => {:ideas => @user_ideas}
      .pagination
        = paginate @user_ideas
  #change-avatar-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
          %h4.modal-title Change your avatar
        .modal-body
          .alert.alert-warning.fade.in{:role => "alert", style: 'display: none'}
            %button.close{"data-hide" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} ×
            Please choose an image file
          = form_for current_user, :url => {:action => 'update'}, :html => {:class => 'change-avatar-form'} do |f|
            .avatar-box-big
              = image_tag(@user.avatar.big_avatar.url,:class => 'user-avatar')
            = f.file_field 'avatar', :class => 'avatar-field', :name => 'avatar'
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary.submit-avatar{:type => "button"} Save changes

= javascript_include_tag "ideas"